<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="restservice.infrastructure.datasource.todo.TodoMapper">

    <resultMap id="todo" type="restservice.domain.model.todo.Todo">
        <id property="Identifier.value" column="ID"/>
        <result property="title" column="TITLE"/>
        <result property="finished" column="FINISHED"/>
    </resultMap>

    <select id="selectByIdentifier" resultMap="todo">
        SELECT
        ID
            ,TITLE
            ,FINISHED
        FROM
            TODO
        WEHRE
            ID = 1
    </select>

</mapper>